{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es2022"],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "nodenext",
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "paths": {
      "@routing": ["./src/infra/plugins/routes-decorator/index.ts"],
      "@auth": ["./src/infra/plugins/auth/index.ts"],
      "@app/*": ["./src/app/*"],
      "@infra/*": ["./src/infra/*"],
      "@utils/*": ["./src/utils/*"],
      "@plugins/*": ["./src/infra/plugins/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
